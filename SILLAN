+from fpdf import FPDF
+
+TITLE = "Маркетинговая стратегия продвижения Telegram-канала SILLAN"
+
+
+def add_section_title(pdf, text):
+    pdf.set_font("DejaVu", "B", 14)
+    pdf.cell(0, 10, text, ln=True)
+    pdf.ln(2)
+
+
+def add_subtitle(pdf, text):
+    pdf.set_font("DejaVu", "B", 12)
+    pdf.cell(0, 8, text, ln=True)
+    pdf.ln(1)
+
+
+def add_paragraph(pdf, text):
+    pdf.set_font("DejaVu", size=10)
+    width = pdf.w - 2 * pdf.l_margin
+    pdf.multi_cell(width, 5.5, text)
+    pdf.ln(1)
+
+
+def add_bullets(pdf, items):
+    pdf.set_font("DejaVu", size=10)
+    width = pdf.w - 2 * pdf.l_margin
+    for item in items:
+        pdf.multi_cell(width, 5.5, f"• {item}")
+    pdf.ln(1)
+
+
+def add_table(pdf, columns, rows, col_widths=None):
+    pdf.set_font("DejaVu", "B", 10)
+    if col_widths is None:
+        col_widths = [pdf.w / len(columns) - 20] * len(columns)
+    for idx, col in enumerate(columns):
+        pdf.cell(col_widths[idx], 8, col, border=1, align="C")
+    pdf.ln()
+    pdf.set_font("DejaVu", size=10)
+    for row in rows:
+        for idx, cell in enumerate(row):
+            pdf.multi_cell(col_widths[idx], 6, cell, border=1, align="L", new_x="RIGHT", new_y="TOP")
+        pdf.ln()
+    pdf.ln(2)
+
+
+def add_scheme(pdf, title, steps):
+    add_subtitle(pdf, title)
+    pdf.set_font("DejaVu", size=10)
+    width = pdf.w - 2 * pdf.l_margin
+    for idx, step in enumerate(steps, start=1):
+        pdf.multi_cell(width, 5.5, f"{idx}. {step}")
+    pdf.ln(2)
+
+
+def build_pdf(path: str) -> None:
+    pdf = FPDF()
+    pdf.add_page()
+    pdf.set_title(TITLE)
+    pdf.set_auto_page_break(auto=True, margin=12)
+
+    pdf.add_font("DejaVu", "", "/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf", uni=True)
+    pdf.add_font("DejaVu", "B", "/usr/share/fonts/truetype/dejavu/DejaVuSans-Bold.ttf", uni=True)
+
+    pdf.set_font("DejaVu", "B", 16)
+    pdf.multi_cell(0, 10, TITLE)
+    pdf.ln(4)
+
+    add_section_title(pdf, "1.0 Стратегический фундамент")
+    add_paragraph(pdf, "Четко сформулированные цели и понимание аудитории делают канал SILLAN измеримым продажным инструментом, а не просто площадкой для контента.")
+
+    add_subtitle(pdf, "1.1 Ключевые цели канала")
+    add_paragraph(pdf, "Главная бизнес-цель: рост продаж автосервисного оборудования через канал, усиление доверия к бренду и стимуляция повторных покупок.")
+    add_table(
+        pdf,
+        ["Фокус", "Конкретные цели"],
+        [
+            ["Продажи", "Увеличить число лидов на подъемники, шиномонтажное и диагностическое оборудование"],
+            ["Доверие", "Позиционировать SILLAN как надежного эксперта и поставщика"],
+            ["Повторные продажи", "Стимулировать дозаказы от текущих клиентов"],
+            ["Эксклюзив", "Создать площадку для спецпредложений, доступных только в Telegram"],
+        ],
+        col_widths=[45, 135],
+    )
+
+    add_subtitle(pdf, "Промежуточные маркетинговые цели")
+    add_bullets(
+        pdf,
+        [
+            "Собрать вовлеченное комьюнити владельцев СТО и шиномонтажных мастерских",
+            "Повысить доверие через экспертный и честный контент",
+            "Перевести наиболее лояльную аудиторию из Instagram в Telegram",
+            "Удерживать подписчиков эксклюзивными предложениями",
+        ],
+    )
+
+    add_subtitle(pdf, "1.2 Сегментация аудитории")
+    add_table(
+        pdf,
+        ["Сегмент", "Кто это?", "Что важно"],
+        [
+            [
+                "Основной",
+                "Мужчины 30–55, владельцы СТО/шиномонтажей, принимают решения о закупках",
+                "Надежность, гарантии, расчеты окупаемости, защита от переплат",
+            ],
+            [
+                "Начинающие",
+                "Открывают свое СТО, оценивают рентабельность проекта",
+                "Пошаговый план запуска и оптимальный бюджет",
+            ],
+            [
+                "Наемные мастера",
+                "Работают с оборудованием и влияют на выбор руководителя",
+                "Практичность и удобство эксплуатации, рекомендации бренда",
+            ],
+        ],
+        col_widths=[35, 75, 70],
+    )
+
+    add_subtitle(pdf, "1.3 Ключевые боли")
+    add_bullets(
+        pdf,
+        [
+            "Как выбрать подъемник или станок, который не потребует дорогого ремонта",
+            "Какое оборудование окупится быстрее всего",
+            "Как открыть шиномонтаж и уложиться в бюджет",
+            "Где получить гарантию и сервис после покупки",
+            "Что выбрать для легкового, джипового или грузового автопарка",
+        ],
+    )
+
+    add_section_title(pdf, "2.0 Воронка привлечения: лид-магнит и трафик")
+    add_paragraph(pdf, "Двухступенчатая воронка переводит холодный трафик в подписчиков через PDF-гайд и масштабируется платными каналами.")
+
+    add_subtitle(pdf, "2.1 Лид-магнит")
+    add_paragraph(pdf, "PDF-гайд \"Как открыть прибыльный шиномонтаж или СТО в 2025 году\" закрывает главные боли аудитории и демонстрирует экспертность SILLAN.")
+    add_bullets(
+        pdf,
+        [
+            "5 ошибок новичков при выборе оборудования",
+            "3 варианта бюджета на открытие шиномонтажа",
+            "Расчеты окупаемости подъемников и станков",
+            "Как не ошибиться в выборе бренда",
+            "Кейсы реальных клиентов SILLAN",
+            "Чек-лист приоритетных покупок",
+            "Эксклюзивный оффер со скидкой для первой покупки",
+        ],
+    )
+    add_paragraph(pdf, "Альтернативные заголовки для A/B-тестов: \"Как открыть шиномонтаж и выйти в плюс за 30 дней\", \"Как выбрать подъемник и не пожалеть через полгода\", \"ТОП-7 ошибок при старте сервиса\".")
+
+    add_subtitle(pdf, "2.2 Каналы привлечения")
+    add_table(
+        pdf,
+        ["Канал", "Механика", "Ожидаемая стоимость подписчика"],
+        [
+            [
+                "Рекламные посевы",
+                "Выбор каналов через TGStat/Telemetr: авто, гаражная тематика, предпринимательство 30+",
+                "80–300 ₸ в зависимости от релевантности размещения",
+            ],
+            [
+                "Контекстная реклама",
+                "Яндекс.Директ и Google Ads по горячим запросам (\"купить подъемник\", \"открыть шиномонтаж\")",
+                "Зависит от ставки, но лид переходит сразу в Telegram через страницу скачивания гайда",
+            ],
+        ],
+        col_widths=[35, 95, 45],
+    )
+
+    add_scheme(
+        pdf,
+        "Схема воронки",
+        [
+            "Объявление или пост → целевая страница → выдача лид-магнита",
+            "Получение PDF в Telegram-боте → подписка на канал",
+            "Контент-прогрев рубриками → эксклюзивные акции → заявка/покупка",
+        ],
+    )
+
+    add_section_title(pdf, "3.0 Контент-стратегия")
+    add_paragraph(pdf, "Контент выстраивает доверие, отвечает на ключевые вопросы аудитории и подводит к покупке через 5 рубрик.")
+    add_table(
+        pdf,
+        ["Рубрика", "Задача", "Пример темы"],
+        [
+            ["Разборы оборудования", "Показать характеристики без воды", "Обзор подъемника на 4 т: плюсы и ограничения"],
+            ["Окупаемость", "Дать точные расчеты выгод", "Сколько зарабатывает шиномонтаж в сезон"],
+            ["Кейсы клиентов", "Социальное доказательство", "Как обновление балансира увеличило средний чек"],
+            ["Ошибки", "Предупредить просчеты", "5 ошибок при покупке первого гидравлического подъемника"],
+            ["Мини-школа", "Пошаговый маршрут запуска СТО", "Урок 3: подбор помещения и электромощности"],
+        ],
+        col_widths=[40, 60, 80],
+    )
+
+    add_section_title(pdf, "4.0 Механизмы монетизации")
+    add_paragraph(pdf, "Эксклюзивность — главный драйвер продаж: предложения доступны только подписчикам Telegram.")
+    add_bullets(
+        pdf,
+        [
+            "Закрытые цены с пометкой о доступности только в канале",
+            "Уникальные промокоды (tg–lift–7, tg–shina–5000)",
+            "Распродажа остатков склада",
+            "Предпродажи новых моделей",
+            "Спецкомплекты (например, подъемник + тележка в подарок)",
+            "Ограниченные акции с дедлайном",
+        ],
+    )
+
+    add_section_title(pdf, "5.0 Интеграция с Instagram")
+    add_paragraph(pdf, "Instagram остается главным источником теплой аудитории, которую переводим в Telegram через понятные триггеры.")
+    add_scheme(
+        pdf,
+        "Механики перевода",
+        [
+            "Ссылка в шапке профиля: \"Скидки, которых нет в Instagram — только в Telegram\"",
+            "Ежедневные Stories-тизеры с обещанием эксклюзивов",
+            "Посты-тизеры: начало статьи в Instagram, продолжение в канале",
+            "Анонсы распродаж и секретных цен только для Telegram",
+            "Розыгрыши с обязательной подпиской на канал",
+        ],
+    )
+
+    add_section_title(pdf, "6.0 Итоговая модель")
+    add_paragraph(pdf, "Шесть взаимосвязанных элементов усиливают друг друга и делают канал ключевым активом продаж.")
+    add_table(
+        pdf,
+        ["Элемент", "Роль"],
+        [
+            ["Экспертность", "Формирует доверие"],
